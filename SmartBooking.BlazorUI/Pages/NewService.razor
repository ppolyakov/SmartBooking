@page "/admin/new-service"

@inject IServiceService ServiceService
@inject NavigationManager Nav
@inject ISnackbar Snackbar

<MudPaper Class="p-4 max-w-sm">
    <MudText Typo="Typo.h5" Class="mb-4">New Service</MudText>

    <MudTextField @bind-Value="_title" Label="Title" Required="true" />
    <MudNumericField T="int" @bind-Value="_duration" Label="Duration (minutes)" Required="true" />

    <MudButton OnClick="Save" Color="Color.Primary" Class="mt-4" FullWidth="true">Save</MudButton>
</MudPaper>

@code {
    private string _title = "";
    private int _duration = 30;

    private async Task Save()
    {
        var dto = new ServiceDto
        {
            Title = _title,
            Duration = TimeSpan.FromMinutes(_duration)
        };

        var result = await ServiceService.CreateServiceAsync(dto);
        if (result.IsSuccess)
        {
            Snackbar.Add("Service created!", Severity.Success);
            Nav.NavigateTo("/admin");
        }
        else
        {
            Snackbar.Add($"Failed to create service. {result.ErrorMessage}", Severity.Error);
        }
    }
}